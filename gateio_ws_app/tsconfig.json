{
  "compilerOptions": {
    "target": "ES5",                    /* Set the JavaScript language version to ECMAScript 2022. */
    "module": "commonjs",                  /* Specify the module system for the generated JavaScript code. */
    "strict": true,                        /* Enable all strict type-checking options. */
    "esModuleInterop": true,                /* Enable compatibility with CommonJS modules. */
    "skipLibCheck": true,                  /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true,  /* Ensure that casing is consistent in file names. */
    "moduleResolution": "node",            /* Specify how TypeScript looks up a file from a given module specifier. */
    "resolveJsonModule": true,             /* Include modules imported with `.json` extensions. */
    "baseUrl": ".",                        /* Base directory to resolve non-relative module names. */
    "paths": {
      "*": ["node_modules/*", "src/types/*"]  /* Specify path mapping for module names. */
    },
    "sourceMap": true,                     /* Generate source maps for the transpiled JavaScript files. */
    "outDir": "dist",                    /* Redirect output structure to the directory. */
    "declaration": true,                   /* Generate corresponding .d.ts file. */
    "rootDir": "src",                    /* Specify the root directory of input files. */
    "noImplicitAny": false,                /* Disallow the use of the any type. */
    "strictNullChecks": true,              /* Enable strict null checks. */
    "allowJs": true,                       /* Allow JavaScript files to be imported into TypeScript files. */
    "removeComments": true                 /* Remove comments from the generated .js files. */
  },
  "include": [
    "src/**/*.ts"                         /* Specify the files to be included in the compilation. */
  ],
  "exclude": [
    "node_modules",                       /* Exclude the node_modules directory from the compilation. */
    "dist"                                /* Exclude the output directory from the compilation. */
  ]
}
